{block content}
<div class="card mb-4">
    <img class="card-img-top" src="{$basePath}/img/profile-test-header.jpg" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{$shownUser->forename} {$shownUser->surname}</h5>
        <p class="card-text">E-mail: {$shownUser->email}</p>
        <div class="text-right">
        {if $me}
            <a href="#" class="btn btn-sm btn-secondary text-right">Upravit</a>
        {else}
            <form n:name="changeFriendship">
                <div class="form-group">
                {if $friend}
                    <button n:name="change" class="btn btn-sm btn-danger text-right">Odebrat z přátel</button>
                {else}
                    <button n:name="change" class="btn btn-sm btn-primary text-right">Přidat do přátel</button>
                {/if}
                </div>
            </form>
        {/if}
        </div>
    </div>
</div>
<form>
    <div class="form-group">
        <textarea class="form-control" rows="3" placeholder="Co máte na srdci?"></textarea>
    </div>
    <div class="form-group text-right">
        <a href="#" class="btn btn-primary">
            <i class="fas fa-share-square"></i> Zveřejnit
        </a>
    </div>
</form>
{foreach $posts as $post}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title" style="display: inline;">{$shownUser->forename} {$shownUser->surname}</h5>
            {if $post->shared_by != null}
                - sdílel příspěvek uživatele Jméno Příjmení
            {/if}
            <h6 class="card-subtitle mb-2 text-muted">{$post->created->format('d. m. Y')}</h6>
            <p class="card-text">{$post->content}</p>
            {if true}
                <a href="#" class="btn btn-sm btn-danger">
                    <i class="far fa-heart"></i> 0
                </a>
            {else}
                <a href="#" class="btn btn-sm btn-danger">
                    <i class="fas fa-heart"></i> 0
                </a>
            {/if}
            <a href="#" class="btn btn-sm btn-primary">
                <i class="fas fa-share"></i> Sdílet
            </a>
        </div>
    </div>
{/foreach}